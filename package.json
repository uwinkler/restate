{
  "dependencies": {
    "lerna": "^5.3.0",
    "nodemon": "^2.0.20"
  },
  "scripts": {
    "publish": "lerna run clean && lerna run build && lerna run test && lerna publish",
    "netlify": "cd packages/www && yarn install && yarn build",
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "watch": "nodemon --watch packages -e ts,tsx --exec \"yarn build\"",
    "test": "lerna run test"
  },
  "name": "restate",
  "license": "MIT",
  "version": "0.0.0",
  "npmClient": "yarn",
  "nodemonConfig": {
    "ignore": [
      "packages/**/node_modules/**",
      "packages/**/build/**"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.15.3"
  }
}
